# Variáveis usadas em produção (Render)

# Segurança/Disparos
CHAVE_DISPARO=
VERIFY_TOKEN=

# WhatsApp Cloud API
WHATSAPP_TOKEN=
TOKEN_WHATSAPP=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_BUSINESS_ID=
WHATSAPP_TEMPLATE_ANIV_NAME=

# Google APIs
GOOGLE_CREDENTIALS={}
SPREADSHEET_ID_EVENTOS=

# OpenAI
OPENAI_API_KEY=

# Outros
URL_APP_SCRIPT_EVENTOS=
TELEFONE_CONTATO_HUMANO=
LIMITE_DIARIO_ANIV=
TEMPLATE_ANIV_COLS=
TEMPLATE_ANIV_DEFAULTS=
PUBLIC_BASE_URL=
EVENTOS_LOGO_URL=https://i.imgur.com/c5XQ7TW.png
EVENTOS_LOGO_DATA_URI=
EVENTOS_FONT_CHEWY_WOFF2=
EVENTOS_FONT_CHEWY_URL=
EVENTOS_FONT_ANTONIO_WOFF2=
EVENTOS_FONT_ANTONIO_URL=

# Flags opcionais (mantêm comportamento atual se vazias)
PAINEL_REQUIRE_AUTH=false
RATE_LIMIT_ENABLED=false
TZ=America/Sao_Paulo

# Graph/WhatsApp extras (documentação)
# Versão da Graph API (default v20.0)
GRAPH_API_VERSION=v20.0

# Idiomas de templates (padrão pt_BR). Para aniversário, use o código exato da tradução aprovada (ex.: en_US)
WHATSAPP_TEMPLATE_LANG=pt_BR
WHATSAPP_TEMPLATE_ANIV_LANG=

# Execução segura para testes/staging
DRY_RUN=false          # true = não envia mensagens (apenas log)
ENABLE_CRON=true       # false = desativa agendamentos
SHEETS_READ_ONLY=false # true = não grava no Google Sheets

# Throttling e retry (WhatsApp /messages)
THROTTLE_CONCURRENCY=2
THROTTLE_DELAY_MS=150
RETRY_MAX=2
RETRY_BASE_MS=500

